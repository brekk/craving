import { Just, Nothing } from "Maybe"

import Palettes from "@/Palettes"
import { quote } from "@/String"
import { Theme } from "@/Theme"



export theme = Theme(
  Palettes.ROSE_PINE,
  { all: "Obviously Narrow", prelude: Just("Compadre"), external: Nothing, local: Nothing },
  (t, f) => `[fontsize="40pt", fontname="${f.all}", fontcolor="${t.bg}"]`,
  (t, f) => (
    {
      prelude: {{
        "fontsize": "20pt",
        "shape": "rect",
        "style": "filled",
        "margin": "0.25",
        "fontname": f.prelude,
        "fillcolor": t.bg,
        "fontcolor": t.fg,
        "penwidth": "5",
      }},
      external: {{ "fillcolor": t.external, "style": "filled", "shape": "ellipse" }},
      local: {{
        "shape": "rect",
        "style": `rounded,filled`,
        "fillcolor": t.local,
        "margin": "0.25",
      }},
    }
  ),
  (t, _) => (
    {
      external: {{ "color": t.external, "penwidth": "2" }},
      prelude: {{ "style": "dashed", "penwidth": "2" }},
      local: {{ "style": "bold", "color": t.local, "penwidth": "2" }},
    }
  ),
)
